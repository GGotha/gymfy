generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  id_role    String
  id_plan    String?
  email      String    @unique
  password   String
  name       String
  plan_expired_at DateTime? 
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
 

  role Role @relation(fields: [id_role], references: [id])
  plan Plan? @relation(fields: [id_plan], references: [id])

  Checkin Checkin[]
  Transaction Transaction[]
  Notification Notification[]

  @@map("users")
}

model Role {
  id         String    @id @default(uuid())
  name       String
  active     Boolean
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  user User[]

  @@map("roles")
}

model Checkin {
  id         String    @id @default(uuid())
  id_user    String
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  user User @relation(fields: [id_user], references: [id])

  @@map("checkins")
}

model Plan {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  user User[]

  @@map("plans")
}

model TransactionType {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  transactions Transaction[]

  @@map("transaction_types")
}
model Transaction {
  id         String    @id @default(uuid())
  id_user    String
  id_type    String
  gyc_amount String
  brl_amount String
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  transactionType TransactionType @relation(fields: [id_type], references: [id])
  user User @relation(fields: [id_user], references: [id])

  @@map("transactions")
}
model Event {
  id         String    @id @default(uuid())
  type String
  text String
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  Notification Notification[]

  @@map("events")
}

model Notification {
  id         String    @id @default(uuid())
  id_user_to_notify String
  id_event String
  seen_by_user Boolean @default(false)
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  user User @relation(fields: [id_user_to_notify], references: [id])
  event Event @relation(fields: [id_event], references: [id])

  @@map("notifications")
}
